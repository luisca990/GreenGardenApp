<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextoCategorias">
        <item name="android:layout_marginTop">120dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">Registro por Categorias</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="TextoDatos">
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textColorHint">@color/green</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="TitulosCategorias">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="ParrafosCategorias">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="CategoryBotones">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">200dp</item>
    </style>
</resources>