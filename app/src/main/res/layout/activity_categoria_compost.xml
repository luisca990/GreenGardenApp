<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    tools:context=".CategoryCompostActivity">

    <FrameLayout
        android:id="@+id/headerLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >

        <!-- Línea como encabezado -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@color/green"/>

        <ImageButton
            android:id="@+id/LogoTemp"
            style="@style/LogoTemp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/TextoCategorias"
            style="@style/TextoCategorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        style="@style/linearLayoutThemeRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/headerLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/footerLayout"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            style="@style/btn_register_register"
            android:layout_width="wrap_content"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:text="CONSUMO" />


        <TextView
            style="@style/tv_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:text="COMPOST" />

        <EditText
            style="@style/TextoDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Cant. Residuos Orgánicos "/>

        <EditText
            style="@style/TextoDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Costo de Consumo"/>

        <EditText
            style="@style/TextoDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mes de Consumo"/>

        <Button
            android:id="@+id/btn_calcular_compost"
            style="@style/btn_register_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:layout_margin="30dp"
            android:text="Calcular" />


    </LinearLayout>

    <!-- Línea y texto en el pie de página -->
    <FrameLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Línea en el pie de página -->
        <View
            android:id="@+id/footerLine"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/green"/>

        <!-- Texto en el pie de página -->
        <TextView
            android:id="@+id/footerText"
            style="@style/footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONSUMO COMPOST"/>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>